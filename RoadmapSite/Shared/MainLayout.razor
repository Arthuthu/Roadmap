@inherits LayoutComponentBase

<div class="page">
    <main>
        <nav class="navbar">
            <div>
                <NavLink class="logo" href="#">
                    <span>Roadmaps</span>
                </NavLink>
            </div>
            <div class="nav-links">
                <AuthorizeView>
                    <Authorized>
                        <span class="nav-link">@context.User.FindFirst(ClaimTypes.Name).Value</span>
                        <NavLink class="nav-link" href="logout">
                            <span class="oi oi-account-logout">Sair</span>
                        </NavLink>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink class="nav-link" href="login">
                            <span class="oi oi-account-logout">Entrar</span>
                        </NavLink>
                        <NavLink class="nav-link" href="register">
                            <span class="oi oi-account-logout">Registrar</span>
                        </NavLink>
                    </NotAuthorized>
                </AuthorizeView>

                <NavLink class="nav-link" href="verifyauth">
                    <span class="oi oi-account-logout">Verifica Autenticação</span>
                </NavLink>
            </div>
        </nav>
        <article>
            @Body
        </article>
    </main>
</div>
